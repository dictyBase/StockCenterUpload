<!doctype html>
<html>
	<head>
		<meta charset="utf-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

  		<title><%= title %></title>
		<!-- Please don't add "maximum-scale=1" here. It's bad for accessibility. -->
		<meta name="viewport" content="width=device-width, initial-scale=1"/>

		<%= stylesheet_link_tag '/scaffold.css' %>

  		<!-- Load jQuery theme CSS -->
  		<%= stylesheet_link_tag '/smoothness/jquery-ui.css' %>

  		<!-- Load jquery and ui -->
  		<%= javascript_include_tag '/jquery-1.6.2.min.js' %>
  		<%= javascript_include_tag '/jquery-ui-1.8.16.custom.min.js' %>

  		<!-- Load plupload and all it's runtimes and finally the jQuery queue widget -->
  		<%= javascript_include_tag '/plupload/js/plupload.full.js' %>
  		<%= javascript_include_tag '/plupload/js/jquery.ui.plupload/jquery.ui.plupload.js' %>
  		<%= stylesheet '/javascripts/plupload/js/jquery.ui.plupload/css/jquery.ui.plupload.css' %>

  		<!-- Load dataTables -->
  		<%= javascript_include_tag '/jquery.dataTables.min.js' %>
		<%= stylesheet_link_tag '/dataTables.css' %>
  		<%= stylesheet_link_tag '/dataTables-jui.css' %>

		<%= content_for 'upload_datatable' %>
  	</head>

  	<body>
		<div id="header">
			<img src="/images/dictyBase-logo.jpg" alt="dictyBase Logo" />
  		</div>
	  	<div id="container">
	  		<div id="uploader">
				<%= content %>
  			</div>
			<div id="helper">
				<div class="ui-tabs ui-widget ui-widget-content ui-corner-all">
					<p>
						Help will be here !!!
					<p>
				</div>
			</div>
		</div>
	</body>
</html>
